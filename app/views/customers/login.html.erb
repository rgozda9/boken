<% @title = "Login" %>

<%= form_tag("", method: "post") do %>
<p>
  <%= label_tag "username", "Username:" %>
  <%= text_field_tag :username %>
</p>
<p>
  <%= label_tag "password", "Password:" %>
  <%= password_field_tag :password %>
</p>
<p>
  <% customer = Customer.find(:id).where("username = ?", :username).where("password = ?", :password) %>
  <%= submit_tag "Login", add_to_session_customer_path(customer) %>
</p>
<% end %>